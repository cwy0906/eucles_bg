
<%= javascript_include_tag "user_sessions/index" %>

<svg xmlns="" class="d-none">
</svg>

<main class="form-signin w-100 m-auto">
  <div class="form-signin-frame bg-light">

  <%= form_with url: login_path, method: "post", local: true, data: { turbo: false } do |f| %>
    <div class="mt-3 mb-2 d-flex ">
      <%= image_tag("eucles_logo.png", width: "75", height: "75") %> 
      <h1 class="h3 mt-5 mb-3 fw-normal text-muted">&ensp;Please sign in</h1>
    </div>

    <div class="form-floating">
      <%= f.text_field :email, class: "form-control text-muted", type: "email", id: "floatingInput", placeholder: "name@example.com" %>
      <label for="floatingInput text-muted">Email address</label>
    </div>

    <div class="form-floating">
      <%= f.text_field :password, class: "form-control text-muted", type: "password", id: "floatingPassword", placeholder: "Password" %>
      <label for="floatingPassword text-muted">Password</label>
    </div>
<!--
    <div class="form-check text-start my-2">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label text-muted" for="flexCheckDefault">
        Remember me
      </label>
    </div>
-->
    <%= f.submit %s(Sign in), class: "btn btn-primary w-100 py-2" %>
  <% end %>

  <% if session[:common_message] %>  
    <hr>
    <%= render partial: "common_ parts/message_zone", locals: { common_message: (session[:common_message].deep_symbolize_keys rescue nil) } %>
  <% end %>

  <div class="dropdown mt-5 mb-3">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
      <i class="bi bi-globe2"></i>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <li><a class="dropdown-item" href="#">中文</a></li>
      <li><a class="dropdown-item" href="#">English</a></li>
    </ul>
    <p class="text-body-secondary text-muted">&copy; 2024–cwy</p>
  </div>

  </div>
</main>