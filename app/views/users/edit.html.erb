
<div class="bg-light rounded-3 p-3">
  <h1 class="h3 mt-5 mb-3 fw-normal text-muted">Update user</h1>
  <%= form_with url: user_path, method: "put", local: true, data: { turbo: false } do |f| %>
      <%= f.text_field :id, value: @edit_user.id_hash, class: "d-none" %>
    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <%= f.text_field :email, value: @edit_user.email, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label for="user_name" class="form-label">User name</label>
      <%= f.text_field :user_name, value: @edit_user.user_name, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label for="nickname" class="form-label">Nickname</label>
      <%= f.text_field :nickname,  value: @edit_user.nickname, class: "form-control" %>
    </div>
    <div class="mb-3">
      <label for="role" class="form-label">Role</label>
      <%= f.number_field :role, value:  User.roles[@edit_user.role], min: 0, max: 2, :step => "1", class: "form-control" %>
    </div>
      <%= f.submit :Submit, class: "btn btn-primary" %>
  <% end %>
</div>













