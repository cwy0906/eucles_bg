
<%= javascript_include_tag "users/index" %>

<div class="bg-light rounded-3 p-2">

  <nav class="navbar navbar-dark bg-primary rounded-3 p-3">
    <a class="navbar-brand">Users filter</a>
    <form class="form-inline">
      <div class="row align-items-center">
        <div class="col">
          <input  class="form-control" type="search" placeholder="Keyword" aria-label="Keyword">
        </div>
        <div class="col">
          <button class="btn btn-secondary">Search</button>
          <%= link_to "<i class='fs-4 bi bi-person-plus'></i>".html_safe, new_user_path, class: "btn btn-success" %>
        </div>
      </div>
    </form>
  </nav>

  <%= render partial: "users/index/results_board", locals: { show_users: @show_users } %>

</div>

