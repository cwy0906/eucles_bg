
<div class="bg-light rounded-3 p-2">

  <nav class="navbar navbar-dark bg-primary rounded-3 p-3">
    <a class="navbar-brand">Users filter</a>
    <form class="form-inline">
      <div class="row align-items-center">
        <div class="col">
          <input  class="form-control" type="search" placeholder="Keyword" aria-label="Keyword">
          
        </div>
        <div class="col">
          <button class="btn btn-secondary">Search</button>
          <button class="btn btn-success"><i class="fs-4 bi bi-person-plus-fill"></i></button>
        </div>
      </div>
    </form>
  </nav>

  <table class="table table-striped">
    <thead class="table-light">
      <tr>
        <th scope="col">User name</th>
        <th scope="col">Nickname</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">created at</th>
        <th scope="col">updated at</th>
        <th scope="col">operate</th>
      </tr>
    </thead>
    <tbody>
      <% @show_users.each do |show_user| %>
        <tr class="bg-info">
          <th scope="row"><%= show_user.user_name %></th>
          <td><%= show_user.nickname %></td>
          <td><%= show_user.email %></td>
          <td><%= show_user.role %></td>
          <td><%= show_user.created_at %></td>
          <td><%= show_user.updated_at %></td>
          <td>
            <button type="button" class="btn btn-primary">Edit</button>
            <button type="button" class="btn btn-secondary">Delete</button>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

